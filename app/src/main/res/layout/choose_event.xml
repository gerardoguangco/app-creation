<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gerardo.tourapp.app.ListItemActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar_main" />

        <fragment
            android:id="@+id/fragment_activity_listView"
            android:name="com.example.gerardo.tourapp.fragment.EventListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/activity_event_list_details"
            tools:layout="@layout/activity_event_list_details" />
    </LinearLayout>


</FrameLayout>
